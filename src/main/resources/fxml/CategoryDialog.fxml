<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.controllers.CategoryDialogController">
   <content>
      <VBox spacing="15.0" styleClass="dialog-container">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label styleClass="dialog-title" text="Category Information" />
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <HBox spacing="10.0" styleClass="dialog-buttons">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="saveBtn" styleClass="primary-button" text="Save" />
                  <Button fx:id="cancelBtn" styleClass="secondary-button" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</DialogPane>
