<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.controllers.ProductController">
   <content>
      <VBox spacing="20.0" styleClass="page-container">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label styleClass="page-title" text="Products" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addProductBtn" styleClass="primary-button" text="Add Product" />
                  <Button fx:id="editProductBtn" styleClass="secondary-button" text="Edit" />
                  <Button fx:id="deleteProductBtn" styleClass="danger-button" text="Delete" />
                  <Button fx:id="refreshBtn" styleClass="secondary-button" text="Refresh" />
               </children>
            </HBox>
            <TableView fx:id="productsTable" styleClass="data-table">
               <columns>
                  <TableColumn fx:id="imageColumn" text="Image" />
                  <TableColumn fx:id="nameColumn" text="Name" />
                  <TableColumn fx:id="categoryColumn" text="Category" />
                  <TableColumn fx:id="priceColumn" text="Price" />
                  <TableColumn fx:id="stockColumn" text="Stock" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </content>
</ScrollPane>
